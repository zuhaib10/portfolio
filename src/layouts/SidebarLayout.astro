---
import Layout from './Layout.astro';
import siteData from '../data/site.json';

interface Props {
  title: string;
}

const { title } = Astro.props;
const { profile } = siteData;
---

<Layout title={title}>
  <main class="layout">
    <!-- Left Column -->
    <div class="left-column">
      <section class="profile-section">
        <a href="/" class="logo-link">
          <img src={profile.avatar} alt="Profile" class="avatar" />
          <h1 class="logo">{profile.name}</h1>
        </a>
        
        <div class="bio">
          {profile.bio.map((item) => (
            <p><span class="icon">{item.icon}</span> {item.text}</p>
          ))}
        </div>

        <div class="social-links">
          {profile.socials.map((social) => (
            <a href={social.url} class="social-link">
              <span class="icon">{social.icon}</span> {social.name}
            </a>
          ))}
        </div>
      </section>
    </div>

    <!-- Right Column -->
    <div class="right-column">
      <slot />
    </div>
  </main>
</Layout>

<style>
  .layout {
    display: grid;
    grid-template-columns: 30% 70%;
    gap: 2rem;
    max-width: calc(100vw - 60px);
    margin: 0 auto;
    padding: 2rem;
  }

  .left-column {
    position: sticky;
    top: 2rem;
    height: fit-content;
  }

  .right-column {
    min-width: 0;
  }

  .profile-section {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: 2rem;
  }

  .logo-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: opacity 0.2s;
  }

  .logo-link:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .logo {
    font-size: 2.5rem;
    margin: 0;
    color: #fff;
  }

  .bio {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link {
    color: #fff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .icon {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .layout {
      grid-template-columns: 1fr;
    }

    .left-column {
      position: static;
    }
  }
</style>